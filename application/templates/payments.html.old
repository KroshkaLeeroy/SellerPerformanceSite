{% extends "payments_base.html" %}


{% block content %}


<form class="filler" method="post" action="{{url_for('payment_blueprint.payment_page')}}">
    <div class="p-block" id="current-plan">
        <div class="plan" id="plan-label">
            <div class="small-text">Ваш тарифный план</div>
            <div class="big-text">{{payments.plan}}</div>
        </div>
        <div class="line"></div>
        <div class="statistics">
            <div class="first">
                <div class="item">
                    <div class="small-text-bold">Запросов за сутки&nbsp;</div>
                    <div id=count>{{requests}}/1500</div>
                </div>
                <div class="item">
                    <div class="small-text-bold">Магазинов подключено&nbsp;</div>
                    <div class="values">{{payments.shops_connected}}/{{scm}}</div>
                </div>
            </div>
            <div class="second">
                <div class="item">
                    <div class="small-text-bold">Оплачен до&nbsp;</div>
                    <div id=count>{{payments.payment_date}}</div>
                </div>
                <div class="item">
                    <div class="small-text-bold">Автопродление&nbsp;</div>
                    <div id="values">{{payments.autopay}}</div>
                </div>
            </div>
        </div>
    </div>
    <div class="content-wrapper">
        <div class="choise-plan-label">Выбрать тариф</div>
        <div class="container">
            <div class="plans">
                <input type="radio" name="plan-type" id="plan-start" value=3990 onchange="count()">
                <label for="plan-start" class="plans-wrap">
                    <div class="plan">
                        <div class="medium">Старт</div>
                        <ul>
                            <li>Возможность создания отчётов за 1 прошлый день</li>
                            <li>5000 запросов в сутки</li>
                        </ul>
                    </div>
                    <div class="price">
                        <div class="medium">3990</div>
                        <div class="small-text">₽/мес</div>
                    </div>
                </label>
                <input type="radio" name="plan-type" id="plan-basic" checked="checked" value=4990 onchange="count()">
                <label for="plan-basic" class="plans-wrap">
                    <div class="plan">
                        <div class="medium">Базовый</div>
                        <ul>
                            <li>Возможность создания отчётов за последние 60 дней</li>
                            <li>5000 запросов в сутки</li>
                        </ul>
                    </div>
                    <div class="price">
                        <div class="medium">4990</div>
                        <div class="small-text">₽/мес</div>
                    </div>
                </label>
            </div>

            <div class="p-block" id="more-options">
                <div class="medium">Дополнительно</div>
                <div class="small-text-bold">Магазины</div>
                <div class="item">
                    <div class="small-text">В настоящий момент вы используете&nbsp;</div>
                    <div class="small-text-bold">{{payments.shops_connected}}</div>
                </div>
                <div class="range-item">
                    <div class="picker-wrapper">
                        <input id="shops-count" type="range" min="0" max="10" value="1" name="shops">
                    </div>
                    <div class="medium" id="shops-count-label">1</div>
                </div>
                <div class="small-text-bold">Оплачиваемые месяцы</div>
                <div class="small-text">Скидка 15% при оплате тарифа на 6 месяцев</div>
                <div class="small-text">Скидка 25% при оплате тарифа на год</div>
                <div class="range-item">
                    <div class="picker-wrapper">
                        <input id="months" type="range" min="1" max="12" value="1" name="months">
                    </div>
                    <div class="medium" id="months-label">1</div>
                </div>
                <div class="switch">
                    <input type="checkbox" name="autopays" checked="checked">
                    <div class="small-text">Автопродление включено</div>
                </div>
            </div>
        </div>
    </div>
    <div class="p-block" id="pay-for">
        <div class="item" id="total">
            <div class="medium">Тариф к оплате</div>
            <ul class="params">
                <li>Тариф Базовый</li>
                <li id="shops-total">1 доп. магазин</li>
                <li id="months-total">1 месяц</li>
            </ul>
            <div class="item" id="price-tag">
                <div class="medium-reduced">К оплате</div>
                <div class="item">
                    <div class="choise-plan-label" id="checkout">4990</div>
                    <div class="normal">₽</div>
                </div>
            </div>
            <form id="payment">
                <button type="submit" class="button" id="pay-button">
                    <div id="pay">Оплатить</div>
                </button>
            </form>
        </div>
        <div class="p-block" id="white">
            <div class="medium-reduced">Проблемы с оплатой или возник вопрос?</div>
            <div class="params">Напишите нам в мессенджер или оставьте заявку</div>
            <div class="item" id="buttons">
                <a class="button" href="https://t.me/">Telegram</a>
                <a class="button" href="https://instagram.com/">Instagram*</a>
                <a class="button" href="{{ url_for('feedback_blueprint.feedback_page') }}">Оставить заявку</a>
            </div>
            <div class="small-text">Публичная оферта</div>
        </div>
    </div>
    <script src="{{ url_for('static', filename='scripts/payments.js') }}"></script>
</form>
{% endblock %}